<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_selected="true">
		<shape>
			<gradient
				android:angle="270"
				android:startColor="#0FC"
				android:centerColor="#0A7"
				android:endColor="#052"
				android:type="linear"
			/>
			<corners
				android:radius="5dp"	
			/>
		</shape>
	</item>
	
	<item android:state_pressed="true">
		<shape>
			<solid
				android:color="#0FC"		
			/>
			<corners
				android:radius="5dp"	
			/>
		</shape>
	</item>

	<item android:state_selected="false">
		<shape>
			<gradient
				android:angle="270"
				android:startColor="#000"
				android:centerColor="#000"
				android:endColor="#0FC"
				android:type="linear"
			/>
			<corners
				android:radius="5dp"	
			/>
			<padding 
			    android:left="0dp"
			    android:right="0dp"
			    android:top="0dp"
			    android:bottom="0dp"
			    />
		</shape>
	</item>
</selector>
