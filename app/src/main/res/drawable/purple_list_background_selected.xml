<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<shape>
			<gradient
				android:startColor="#d9f"
				android:centerColor="#c8f"
				android:endColor="#0222"
				android:centerX="0"
				android:centerY=".5"
				android:gradientRadius="5000%"
				android:type="radial"
			/>
		</shape>
	</item>
	
	<item>
		<shape>
			<gradient
				android:startColor="#d9f"
				android:centerColor="#c8f"
				android:endColor="#0222"
				android:centerX="1"
				android:centerY=".5"
				android:gradientRadius="5000%"
				android:type="radial"
			/>
		</shape>
	</item>
	
	<item>
		<shape android:shape="line">
		    <stroke
			       android:width="2dp"
		           android:color="#d9f"
		    />
		</shape>
	</item>
</layer-list>
