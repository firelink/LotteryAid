<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<solid
				android:color="#8df"		
			/>
			<corners
				android:radius="5dp"	
			/>
		</shape>
	</item>
	
		<item>
		<shape>
			<gradient
				android:angle="270"
				android:startColor="#5af"
				android:centerColor="#27c"
				android:endColor="#005"
				android:type="linear"
			/>
			<corners
				android:radius="5dp"	
			/>
		</shape>
	</item>
</selector>
