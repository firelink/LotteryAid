<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<solid
				android:color="#ddd"		
			/>
			<corners
				android:radius="5dp"	
			/>
			<padding 
			    android:left="0dp"
			    android:right="0dp"
			    android:top="0dp"
			    android:bottom="0dp"
			    />
		</shape>
	</item>

	<item>
		<shape>
			<gradient
				android:angle="270"
				android:startColor="#bbb"
				android:centerColor="#777"
				android:endColor="#333"
				android:type="linear"
			/>
			<corners
				android:radius="5dp"	
			/>
			<padding 
			    android:left="0dp"
			    android:right="0dp"
			    android:top="0dp"
			    android:bottom="0dp"
			    />
		</shape>
	</item>
</selector>
