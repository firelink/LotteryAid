<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_selected="true">
		<shape>
			<gradient
				android:angle="270"
				android:startColor="#fff"
				android:centerColor="#ddd"
				android:endColor="#555"
				android:type="linear"
			/>
			<corners
				android:radius="5dp"	
			/>
			<padding 
			    android:left="0dp"
			    android:right="0dp"
			    android:top="0dp"
			    android:bottom="0dp"
			    />
		</shape>
	</item>

	<item android:state_pressed="true">
		<shape>
			<solid
				android:color="#fff"		
			/>
			<corners
				android:radius="5dp"	
			/>
			<padding 
			    android:left="0dp"
			    android:right="0dp"
			    android:top="0dp"
			    android:bottom="0dp"
			    />
		</shape>
	</item>

	<item android:state_selected="false">
		<shape>
			<gradient
				android:angle="270"
				android:startColor="#000"
				android:centerColor="#000"
				android:endColor="#fff"
				android:type="linear"
			/>
			<corners
				android:radius="5dp"	
			/>
			<padding 
			    android:left="0dp"
			    android:right="0dp"
			    android:top="0dp"
			    android:bottom="0dp"
			    />
		</shape>
	</item>
</selector>
