<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<shape>
			<gradient
				android:startColor="#fe6"
				android:centerColor="#fe0"
				android:endColor="#0222"
				android:centerX="0"
				android:centerY=".5"
				android:gradientRadius="5000%"
				android:type="radial"
			/>
		</shape>
	</item>
	
	<item>
		<shape>
			<gradient
				android:startColor="#fe6"
				android:centerColor="#fe0"
				android:endColor="#0222"
				android:centerX="1"
				android:centerY=".5"
				android:gradientRadius="5000%"
				android:type="radial"
			/>
		</shape>
	</item>
	
	<item>
		<shape android:shape="line">
		    <stroke
			       android:width="2dp"
		           android:color="#fe6"
		    />
		</shape>
	</item>
</layer-list>
