<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<solid
				android:color="#0FF"		
			/>
			<corners
				android:radius="5dp"	
			/>
		</shape>
	</item>

	<item>
		<shape>
			<gradient
				android:angle="270"
				android:startColor="#0FC"
				android:centerColor="#0A7"
				android:endColor="#052"
				android:type="linear"
			/>
			<corners
				android:radius="5dp"	
			/>
		</shape>
	</item>
</selector>
